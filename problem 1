package project_euler_prob1;

/**
 *
 * @author Jeevan Chana (ProEu: jeevan_chana )
 */
public class Project_euler_prob1 {

    /**
     * @param args the command line arguments
     */
    
    public static void main(String[] args) {
        int sum = 0;
    for ( int i = 0; i < 1000; i++ ) {
        if ( i % 3 == 0 || i % 5 == 0 ) { 
           
            sum = sum + i;
        }
    }
        System.out.println("Sum = " + sum );
    }
    
    
}
